{
  "version": 1,
  "type": "object",
  "description": "Compute system definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned"
    },
    "latitude": {
      "type": "number",
      "title": "Latitude",
      "default": null,
      "required": true
    },
    "longitude": {
      "type": "number",
      "title": "Longitude",
      "default": null,
      "required": true
    },
    "hardware_capabilities": {
      "type": "array",
      "title": "Hardware capabilities",
      "items": {
        "type": "string",
        "enum": [
          "gpu",
          "high-mem",
          "large-scratch",
          "fast-scratch"
        ]
      },
      "default": null,
      "allowEmpty": true
    },
    "hardware_type": {
      "type": "string",
      "title": "Hardware types",
      "enum": [
        "bare-metal",
        "container",
        "vm"
      ],
      "allowEmpty": true
    },
    "description": {
      "type": "string",
      "title": "Description",
      "default": null
    },
    "name": {
      "type": "string",
      "title": "Name (if applicable)",
      "default": null
    },
    "middleware_version": {
      "type": "string",
      "title": "Version",
      "default": null
    },
    "associated_local_services": {
      "type": "array",
      "items": {
        "$ref": "local-service.json"
      },
      "allowEmpty": true
    },
    "associated_global_services": {
      "type": "array",
      "items": {
        "$ref": "global-service.json"
      },
      "allowEmpty": true
    },
    "downtime": {
      "type": "array",
      "title": "Downtime",
      "items": {
        "type": "object",
        "properties": {
          "date_range": {
            "type": "text",
            "title": "Date Range",
            "required": true
          },
          "type": {
            "title": "Type",
            "enum": [
              "Planned",
              "Unplanned"
            ],
            "default": "Planned",
            "required": true
          },
          "reason": {
            "type": "string",
            "title": "Reason"
          }
        }
      }
    },
    "is_force_disabled": {
      "type": "boolean",
      "title": "Force disable?",
      "default": false
    }
  }
}