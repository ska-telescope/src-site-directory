{
  "version": 3,
  "type": "object",
  "description": "Global service definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned"
    },
    "type": {
      "type": "enum",
      "title": "Type",
      "enum": [
        "rucio",
        "iam",
        "data-management-api",
        "site-capabilities-api",
        "permissions-api",
        "auth-api",
        "gms"
      ],
      "default": null,
      "required": true
    },
    "version": {
      "type": "string",
      "title": "Version",
      "default": null
    },
    "prefix": {
      "type": "string",
      "title": "Prefix",
      "default": null,
      "required": false
    },
    "host": {
      "type": "string",
      "title": "Hostname without prefix or path",
      "default": null,
      "required": false
    },
    "port": {
      "type": "number",
      "title": "Port",
      "default": null,
      "required": false
    },
    "path": {
      "type": "string",
      "title": "Path",
      "default": null,
      "required": false
    },
    "associated_storage_area_id": {
      "type": "string",
      "title": "Associated storage area ID (if applicable)",
      "default": null
    },
    "identifier": {
      "type": "string",
      "title": "Identifier (if applicable)",
      "default": null
    },
    "downtime": {
      "type": "array",
      "title": "Downtime",
      "items": {
        "type": "object",
        "properties": {
          "date_range": {
            "type": "text",
            "title": "Date Range",
            "required": true
          },
          "type": {
            "title": "Type",
            "enum": [
              "Planned",
              "Unplanned"
            ],
            "default": "Planned",
            "required": true
          },
          "reason": {
            "type": "string",
            "title": "Reason"
          }
        }
      }
    },
    "other_attributes": {
      "type": "textarea",
      "title": "Other service attributes (as json)",
      "allowEmpty": true
    },
    "is_force_disabled": {
      "type": "boolean",
      "title": "Force disable?",
      "default": false
    }
  }
}
