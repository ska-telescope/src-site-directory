{
  "version": 1,
  "type": "object",
  "description": "Site definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned"
    },
    "name": {
      "type": "string",
      "title": "Name",
      "required": true
    },
    "description": {
      "type": "string",
      "title": "Description",
      "default": null
    },
    "country": {
      "type": "string",
      "$ref": "country.json"
    },
    "primary_contact_email": {
      "type": "email",
      "title": "Primary contact email",
      "default": null,
      "required": true
    },
    "secondary_contact_email": {
      "type": "email",
      "title": "Secondary contact email",
      "default": null,
      "required": false
    },
    "downtime": {
      "type": "array",
      "title": "Downtime",
      "items": {
        "type": "object",
        "properties": {
          "date_range": {
            "type": "text",
            "title": "Date Range",
            "required": true
          },
          "type": {
            "title": "Type",
            "enum": [
              "Planned",
              "Unplanned"
            ],
            "default": "Planned",
            "required": true
          },
          "reason": {
            "type": "string",
            "title": "Reason"
          }
        }
      }
    },
    "storages": {
      "type": "array",
      "items": {
        "$ref": "storage.json"
      },
      "allowEmpty": true
    },
    "compute": {
      "type": "array",
      "items": {
        "$ref": "compute.json"
      },
      "allowEmpty": true
    },
    "other_attributes": {
      "type": "textarea",
      "title": "Other attributes (as json)",
      "allowEmpty": true
    },
    "is_force_disabled": {
      "type": "boolean",
      "title": "Force disable?",
      "default": false
    }
  }
}
