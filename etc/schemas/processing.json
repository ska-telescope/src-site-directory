{
  "version": 1,
  "type": "object",
  "description": "Processing system definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": null,
      "readOnly": true
    },
    "url": {
      "type": "string",
      "title": "URL",
      "default": null,
      "required": true
    },
    "latitude": {
      "type": "number",
      "title": "Latitude",
      "default": null,
      "required": true
    },
    "longitude": {
      "type": "number",
      "title": "Longitude",
      "default": null,
      "required": true
    },
    "hardware_capabilities": {
      "type": "array",
      "title": "Hardware capabilities",
      "items": {
        "type": "string",
        "enum": [
          "GPU",
          "high-mem",
          "large-scratch",
          "fast-scratch"
        ]
      },
      "default": null,
      "allowEmpty": true
    },
    "hardware_type": {
      "type": "array",
      "title": "Hardware types",
      "items": {
        "type": "string",
        "enum": [
          "bare-metal",
          "container",
          "VM"
        ]
      },
      "default": null,
      "allowEmpty": true
    },
    "description": {
      "type": "string",
      "title": "Description",
      "default": null
    },
    "middleware_version": {
      "type": "string",
      "title": "Version",
      "required": true,
      "default": null
    },
    "associated_services": {
      "type": "array",
      "items": {
        "$ref": "processing-service.json"
      },
      "allowEmpty": true
    }
  }
}