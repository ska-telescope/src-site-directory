{
  "version": 1,
  "type": "object",
  "description": "Downtime scheduler schema.",
  "properties": {
    "node": {
      "type": "string",
      "title": "Node",
      "description": "Node affected by the downtime.",
      "default": null
    },
    "site": {
      "type": "string",
      "title": "Site",
      "description": "Site affected by the downtime.",
      "default": null
    },
    "resourceType": {
      "type": "string",
      "title": "Resource Type",
      "description": "Type of resource affected.",
      "default": null
    },
    "specificResource": {
      "type": "string",
      "title": "Specific Resource",
      "description": "Specific resource affected.",
      "default": null
    },
    "date_range": {
      "type": "text",
      "title": "Date Range",
      "required": true
    },
    "reason": {
      "type": "string",
      "title": "Reason",
      "description": "Reason for the downtime."
    }
  },
  "required": ["date_range", "reason"]
}

