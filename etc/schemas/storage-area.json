{
  "version": 4,
  "type": "object",
  "description": "Storage area definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned",
      "readOnly": true
    },
    "type": {
      "type": "enum",
      "title": "Type",
      "enum": [
        "rse",
        "ingest"
      ],
      "default": null,
      "required": true
    },
    "version": {
      "type": "string",
      "title": "Version",
      "default": null
    },
    "relative_path": {
      "type": "string",
      "title": "Relative path",
      "default": null,
      "required": false
    },
    "identifier": {
      "type": "string",
      "title": "Identifier (if applicable)",
      "default": null
    },
    "other_attributes": {
      "type": "textarea",
      "title": "Other storage area attributes (as json)",
      "allowEmpty": true
    },
    "tier": {
      "type": "integer",
      "title": "Tier (if applicable)",
      "enum": [0, 1],
      "default": 1
    }
  }
}
