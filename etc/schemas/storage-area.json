{
  "version": 4,
  "type": "object",
  "description": "Storage area definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned"
    },
    "type": {
      "type": "enum",
      "title": "Type",
      "enum": [
        "rse",
        "ingest"
      ],
      "default": null,
      "required": true
    },
    "version": {
      "type": "string",
      "title": "Version",
      "default": null
    },
    "relative_path": {
      "type": "string",
      "title": "Relative path",
      "default": null,
      "required": false
    },
    "name": {
      "type": "string",
      "title": "Name (if applicable)",
      "default": null
    },
    "tier": {
      "type": "integer",
      "title": "Tier (if applicable)",
      "enum": [0, 1],
      "default": 1
    },
    "downtime": {
      "type": "array",
      "title": "Downtime",
      "items": {
        "$ref": "downtime.json"
      },
      "allowEmpty": true
    },
    "other_attributes": {
      "type": "textarea",
      "title": "Other storage area attributes (as json)",
      "allowEmpty": true
    },
    "is_force_disabled": {
      "type": "boolean",
      "title": "Force disable?",
      "default": false
    }
  }
}
