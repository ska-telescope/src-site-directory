{
  "version": 3,
  "type": "object",
  "description": "Global service definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": "to be assigned",
      "readOnly": true
    },
    "type": {
      "type": "enum",
      "title": "Type",
      "enum": [
        "rucio",
        "iam"
      ],
      "default": null,
      "required": true
    },
    "version": {
      "type": "string",
      "title": "Version",
      "default": null
    },
    "prefix": {
      "type": "string",
      "title": "Prefix",
      "default": null,
      "required": false
    },
    "host": {
      "type": "string",
      "title": "Hostname without prefix or path",
      "default": null,
      "required": false
    },
    "port": {
      "type": "number",
      "title": "Port",
      "default": null,
      "required": false
    },
    "path": {
      "type": "string",
      "title": "Path",
      "default": null,
      "required": false
    },
    "is_proxy": {
      "type": "boolean",
      "title": "Is proxy?",
      "default": false
    },
    "identifier": {
      "type": "string",
      "title": "Identifier (if applicable)",
      "default": null
    },
    "enabled": {
      "type": "boolean",
      "title": "Enabled?",
      "default": true
    },
    "other_attributes": {
      "type": "object",
      "title": "Other service attributes (as json)",
      "allowEmpty": true
    }
  }
}
