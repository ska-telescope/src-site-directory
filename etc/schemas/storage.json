{
  "version": 1,
  "type": "object",
  "description": "Storage definition schema.",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "format": "uuid",
      "default": null,
      "readOnly": true
    },
    "host": {
      "type": "string",
      "title": "Hostname",
      "default": null,
      "required": true
    },
    "base_path": {
      "type": "string",
      "title": "Base path",
      "default": null,
      "required": true
    },
    "latitude": {
      "type": "number",
      "title": "Latitude",
      "default": null,
      "required": true
    },
    "longitude": {
      "type": "number",
      "title": "Longitude",
      "default": null,
      "required": true
    },
    "srm": {
      "type": "radios",
      "title": "SRM",
      "enum": [
        "storm",
        "xrd",
        "ceph"
      ],
      "default": "storm",
      "required": true
    },
    "device_type": {
      "type": "radios",
      "title": "Device Type",
      "enum": [
        "",
        "HDD",
        "SSD",
        "Tape",
        "Other"
      ],
      "default": null,
      "required": false
    },
    "size_in_terabytes": {
      "type": "number",
      "title": "Size of storage in TB",
      "default": null,
      "required": true
    },
    "identifier": {
      "type": "string",
      "title": "Identifier (if applicable)",
      "default": null
    },
    "supported_protocols": {
      "type": "array",
      "items": {
        "$ref": "storage-access-protocol.json"
      },
      "allowEmpty": true
    }
  }
}